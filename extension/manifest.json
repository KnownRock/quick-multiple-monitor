{
  "name": "Quick Multiple Monitor",
  "version": "0.1.0",
  "description": "Make more easier to open page in specified monitor with drag and drop.",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Multiple Windows",
    "default_popup": "popup/index.html"
  },
  "manifest_version": 2,
  "permissions": ["storage"]
}
